# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5434/collabnote_db"

# Server Configuration
PORT=5000

# Auth / App
JWT_SECRET="replace-with-strong-secret"
APP_NAME="CollabNote"
FRONTEND_URL="http://localhost:5173"
# Path on your frontend where users reset password; token will be appended as query param
RESET_PATH="/reset-password"
# Return reset token in API responses (dev only). Set to false in production.
INCLUDE_RESET_TOKEN_IN_RESPONSE=true

# Email (Nodemailer)
# If SMTP_HOST is omitted, emails are not actually sent; messages are logged via JSON transport.
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM="no-reply@collabnote.local"


# Add your PostgreSQL database connection string above
# Replace username, password, and database name with your actual credentials

# JWT / Tokens
# Access token lifetime (e.g., 15m, 1h)
ACCESS_TOKEN_EXPIRES=15m
# Include refresh token in JSON responses (dev only)
INCLUDE_REFRESH_TOKEN_IN_RESPONSE=true

# Auth security
# Max failed login attempts before temporary lockout
MAX_LOGIN_ATTEMPTS=5
# Lockout duration in minutes after max attempts reached
LOCKOUT_MINUTES=15
